"3.0 (created: 2011/03/06 22:51:04)

"Title
set titlestring=Firefox

"copy/cut/past
cnoremap <C-a> <C-v><C-a>
cnoremap <C-z> <C-v><C-z>
cnoremap <C-c> <C-v><C-c>
cnoremap <C-x> <C-v><C-x>
cnoremap <C-v> <C-v><C-v>
inoremap <C-a> <C-v><C-a>
inoremap <C-z> <C-v><C-z>
inoremap <C-c> <C-v><C-c>
inoremap <C-x> <C-v><C-x>
inoremap <C-v> <C-v><C-v>
nnoremap <C-a> <C-v><C-a>
nnoremap <C-z> <C-v><C-z>
nnoremap <C-c> <C-v><C-c>
nnoremap <C-x> <C-v><C-x>
nnoremap <C-v> <C-v><C-v>

map j 5<C-e>
map k 5<C-y>
map <BS> H
map h <C-p>
map l <C-n>
map d <C-w>
noremap D <Nop>

" ex mode
cmap <C-d> <Tab>
cmap <C-n> <Tab>
cmap <C-p> <S-Tab>

" guioptions
set toolbars=nomenu,nonavigation,bookmarks,noaddons

" :[tab]open の補完対象と順番
set complete=bfhsS

set history=1000
set hlsearch

" Beep設定
set visualbell
hi Bell opacity: .3;

"Esc二回でハイライトを消す
nnoremap <Esc><Esc> :set nohlsearch<CR><Esc>

"next/prev pattern
"set nextpattern=^次(へ|の|ぺ),^続き,\bnext\b,^>$,^(>>|&#187;)$,^(>|&#187;|&rsaquo;),(>|&#187;|&rsaquo;)$,bmoreb
"set nextpattern=\bnext\b,\bmore\b,next,^次(の)?ページ,\b次.*,→\b,^>$,^(>>|≫)$,^(>|≫),(>|≫)$
set nextpattern=\bnext\b,\bmore\b,^next$,^次(の)?ページ,\b次.*,^次へ$,→\b,^>$,^(>>|≫)$,^(>|≫),(>|≫)$
set previouspattern=^前,^前(へ|の|ペ),^戻る,\bprev|previous\b,^<$,^(<<|&#171;)$,^(<|&#171;|lsaquo;)$,^b<

" undo list
noremap U :undo<Space>

" Jump from selection in visual mode http://memo.officebrook.net/20090803.html#p01
vmap <silent> <C-g> y<Esc><Esc>P

" リンクのURIをコマンドラインに表示
set showstatuslinks=2

" ページロード時にテキストボックスにフォーカスするのを防ぐ
set focuscontent

" Open in New Tab
set newtab=help,addons,extoptions

"IME control
style! -name=commandline-ime chrome://* #liberator-commandline-command input {ime-mode: inactive;}

"mapping
no @ :source ~/.vimperatorrc<CR>

" ページのアクセスキーを無効化
set! ui.key.generalAccessKey=0

